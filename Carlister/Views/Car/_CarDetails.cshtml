@using Carlister.BLL.Cars
@using Carlister.Common.Enums
@using Carlister.Web.Controllers

@model Car

<h3 class="bgblue">
    @Html.ActionLink("<", nameof(CarController.List), "Car")
    @Model.Year @Model.Make @Model.Model
</h3>
<div class="carView">
    <content>
        <dl>
            <dt>Make</dt>
            <dd>@Model.Make</dd>

            <dt>Model</dt>
            <dd>@Model.Model</dd>

            <dt>Year</dt>
            <dd>@Model.Year</dd>

            @switch (Model.SaleType)
            {
                case SaleType.PrivateSale:
                {
                    <dt>Contact Name</dt>
                    <dd>@Model.ContactName</dd>
                    <dt>Phone</dt>
                    <dd>@Model.Phone</dd>
                }
                break;
                case SaleType.DealerSale:
                {
                    <dt>Dealer ABN</dt>
                    <dd>@Model.DealerABN</dd>
                }
                break;
            }

            <dt>Email</dt>
            <dd><a href="mailto:@Model.Email">@Model.Email</a></dd>
        </dl>
        <dl class="right">
            @{ Html.RenderPartial("_Price", Model); }
            <dt>Comments</dt>
            <dd>@Model.Comments</dd>
        </dl>
    </content>
</div>
